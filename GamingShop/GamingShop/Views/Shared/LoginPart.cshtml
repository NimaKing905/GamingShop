@model UserLoginViewModel
<!-- End banner -->
    <div class="form-group" style="float: right; border: 1px solid black;border-radius:10px; margin-right:50px; padding:7px;width:350px; margin-top:20px; ">
        <h3>ورود</h3>

        <form asp-controller="Account" asp-action="LoginConfirm">
            <div class="form-group">
                <label class="control-label" for="inputemail">نام کاربری *</label>
                <input asp-for="Username" class="form-control" type="text" placeholder="نام کاربری" id="inputemail">
                <span asp-validation-for="Username"></span>
            </div>
            <div class="group box">
                <label class="control-label" for="inputemail">رمز عبور *</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="رمز عبور" id="inputpass">
                <span asp-validation-for="Password"></span>
            </div>
            <div class="remember">
                <input id="remeber" type="checkbox" name="check" value="remeber">
                <label for="remeber" class="form-check">مرا به خاطر بسپار</label>
                <a class="help" href="#" title="help ?">رمز عبور خود را فراموش کرده اید ؟</a>
            </div>
            <button type="submit" class="btn btn-success">ورود</button>
        </form>
    </div>