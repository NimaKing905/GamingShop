<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Electro - HTML Ecommerce Template</title>

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <link type="text/css" rel="stylesheet" href="~/Assets/css/bootstrap.min.css" />
    <link type="text/css" rel="stylesheet" href="~/Assets/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/Assets/css/slick-theme.css" />

    <link type="text/css" rel="stylesheet" href="~/Assets/css/nouislider.min.css" />
    <link rel="stylesheet" href="~/Assets/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="~/Assets/css/style.css" />
</head>
<body>
    <header>
        <div id="top-header">
            <div class="container">
                <ul class="header-links pull-left">
                    <li><a href="#"><i class="fa fa-phone"></i> +98-9210851848</a></li>
                    <li><a href="#"><i class="fa fa-envelope-o"></i> nima13727@gmail.com</a></li>
                </ul>
                <ul class="header-links pull-right">
                    <li><a href="#"><i class="fa fa-dollar"></i>IR</a></li>

                    @if (User.Identity.IsAuthenticated == true)
                    {
                        <li><a asp-controller="Account" asp-action="Logout"><i class="fa fa-user-o"></i> خروج</a></li>
                        <li><a asp-controller="Dashboard" asp-action="UserMainDashboard"><i class="fa fa-user-o"></i> داشبورد</a></li>
                        <li><a asp-controller="Insert" asp-action="Insert"><i class="fa fa-user-o"></i> ثبت بازی</a></li>
                        <li><a asp-controller="Insert" asp-action="InsertProduct"><i class="fa fa-user-o"></i> ثبت کالا</a></li>
                        <li><a style="cursor:pointer"><i class="fa fa-user-o"></i> @User.Identity.Name</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Account" asp-action="LoginRegister"><i class="fa fa-user-o"></i>ورود/ثبت نام</a></li>
                    }
                </ul>
            </div>
        </div>
        <div id="header">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <div class="header-logo">
                            <a href="#" class="logo">
                                <img src="~/Assets/img/logo.png" alt="">
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="header-search">
                            <form>
                                @*<select class="input-select">
                                        <option value="0">All Categories</option>
                                        <option value="1">Category 01</option>
                                        <option value="1">Category 02</option>
                                    </select>*@
                                <input class="input" placeholder="جستجو">
                                <button class="search-btn">جستجو</button>
                            </form>
                        </div>
                    </div>
                    <!-- /SEARCH BAR -->
                    <!-- ACCOUNT -->
                    <div class="col-md-3 clearfix">
                        <div class="header-ctn">
                            <!-- Wishlist -->
                            <div>
                                <a asp-controller="WishList" asp-action="MyWishList">
                                    <i class="fa fa-heart-o"></i>
                                    <span>سبد آرزو</span>
                                </a>
                            </div>
                            <!-- /Wishlist -->
                            <!-- Cart -->
                            <div class="dropdown">
                                <a style="cursor:pointer" asp-controller="PurchaseCard" asp-action="MyPurchaseCard">
                                    <i class="fa fa-shopping-cart"></i>
                                    <span>سبد خرید</span>
                                </a>
                                <div class="menu-toggle">
                                    <a href="#">
                                        <i class="fa fa-bars"></i>
                                        <span>Menu</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <nav id="navigation">
        <div class="container">
            <div id="responsive-nav">
                <!-- NAV -->
                <ul class="main-nav nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Index">خانه</a></li>
                    <li><a asp-controller="Show" asp-action="ShowAllProducts">کالاها</a></li>
                    <li><a asp-controller="Show" asp-action="ShowAllCatogrys">دسته بندی ها</a></li>
                    <li><a asp-controller="Show" asp-action="ShowAllPlatforms">پلتغرم ها</a></li>
                    <li><a asp-controller="Home" asp-action="AboutMe">درباره ما</a></li>
                    <li><a asp-controller="Ticket" asp-action="Ticket">پشتیبانی</a></li>
                </ul>
                <!-- /NAV -->
            </div>
            <!-- /responsive-nav -->
        </div>
        <!-- /container -->
    </nav>

    @RenderBody()

    <footer id="footer">
        <div class="section">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">درباره ما</h3>
                            <p>تیم برنامه نویسی این سایت را به منظور خرید و فروش اکانت ساخته است</p>
                            <ul class="footer-links">
                                <li><a href="#"><i class="fa fa-map-marker"></i>1734 Stonecoal Road</a></li>
                                <li><a href="#"><i class="fa fa-phone"></i>+021-95-51-84</a></li>
                                <li><a href="#"><i class="fa fa-envelope-o"></i>email@email.com</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">دسته بندی</h3>
                            <ul class="footer-links">
                                <li><a href="#">برنامه</a></li>
                                <li><a href="#">شبیه ساز</a></li>
                                <li><a href="#">آنلاین</a></li>
                                <li><a href="#">اکشن</a></li>
                                <li><a href="#">تیر اندازی</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="clearfix visible-xs"></div>

                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">پلتفرم</h3>
                            <ul class="footer-links">
                                <li><a href="#">Mobile</a></li>
                                <li><a href="#">PC</a></li>
                                <li><a href="#">PS4</a></li>
                                <li><a href="#">XBox</a></li>
                            </ul>
                        </div>
                    </div>

                    @*<div class="col-md-3 col-xs-6">
                            <div class="footer">
                                <h3 class="footer-title">Service</h3>
                                <ul class="footer-links">
                                    <li><a href="#">My Account</a></li>
                                    <li><a href="#">View Cart</a></li>
                                    <li><a href="#">Wishlist</a></li>
                                    <li><a href="#">Track My Order</a></li>
                                    <li><a href="#">Help</a></li>
                                </ul>
                            </div>
                        </div>*@
                </div>
            </div>
        </div>
        <div id="bottom-footer" class="section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <ul class="footer-payments">
                            <li><a href="#"><i class="fa fa-cc-visa"></i></a></li>
                            <li><a href="#"><i class="fa fa-credit-card"></i></a></li>
                            <li><a href="#"><i class="fa fa-cc-paypal"></i></a></li>
                            <li><a href="#"><i class="fa fa-cc-mastercard"></i></a></li>
                            <li><a href="#"><i class="fa fa-cc-discover"></i></a></li>
                            <li><a href="#"><i class="fa fa-cc-amex"></i></a></li>
                        </ul>
                        <span class="copyright">
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @if (TempData["ShowProduct"] != null)
    {
        <div class="modal fade" id="modalMessage">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header" style="background-color:orange">
                        <h4>پیام سیستمی</h4>
                    </div>
                    <div class="modal-body">
                        <h5>@TempData["ShowProduct"]</h5>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-warning" data-dismiss="modal">بازگشت</button>
                    </div>
                </div>
            </div>
        </div>
        <script>
            $(modalMessage).modal()
        </script>
    }
    <script src="~/Assets/js/jquery.min.js"></script>
    <script src="~/Assets/js/bootstrap.min.js"></script>
    <script src="~/Assets/js/slick.min.js"></script>
    <script src="~/Assets/js/nouislider.min.js"></script>
    <script src="~/Assets/js/jquery.zoom.min.js"></script>
    <script src="~/Assets/js/main.js"></script>

</body>
</html>

